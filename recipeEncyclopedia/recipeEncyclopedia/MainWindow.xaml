<Window x:Class="recipeEncyclopedia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:recipeEncyclopedia"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>


        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>

        </Grid.ColumnDefinitions>
        <Border Background="Beige"
  BorderBrush="DarkOliveGreen"
  BorderThickness="5" Grid.ColumnSpan="6" Grid.RowSpan="1" Margin="0,0,0,-213"
  />
        <Label Content="Welcome To The Recipe Encyclopedia"  Background="Beige" BorderBrush="Transparent" FontSize="32" Margin="105,10,105,26" Grid.ColumnSpan="6"  />
        <Button Content="Recipe Hub"  VerticalAlignment="Top" Height="125" Width="125" Margin="133,77,9,0"  Click="Recipe_Click" Grid.ColumnSpan="2" Grid.Row="2" >
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"></Setter>
                </Style>
            </Button.Resources>
        </Button>
        <Button Content="Featured Recipe Of The Day" Height="125" Width="125" Margin="10,81,-2,15" Grid.Column="5" Grid.Row="2" >
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button  Content="Login;" Margin="132,81,10,15" Height="125" Width="125" Grid.Column="3" Grid.ColumnSpan="2" Grid.Row="2" >
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>

        <Button  Content="X" Margin="98,10,10,186" Background="red" Height="25" Width="25" Click="ExitButton_Click" Grid.Column="5" >
            <Button.Resources>

            </Button.Resources>
        </Button>


        <Button Content="Ingredients List" Height="125" Width="125" Margin="3,81,5,15" Click="Ingredients_Click" Grid.Column="2" Grid.Row="2" >
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>

        <Button Content="Shopping List" Height="125" Width="125" Margin="0,86,8,10"  Click="ShoppingList_Click" Grid.Column="3" Grid.Row="2">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>

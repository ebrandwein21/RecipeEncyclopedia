<Window x:Class="recipeEncyclopedia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:recipeEncyclopedia"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="153*"/>
            <RowDefinition Height="281*"/>
        </Grid.RowDefinitions>
        <Border Background="Beige"
  BorderBrush="DarkOliveGreen"
  BorderThickness="5" Grid.RowSpan="2"
  />
        <Label Content="Welcome To The Recipe Encyclopedia"  Background="Beige" BorderBrush="Transparent" FontSize="32" Margin="106,26,81,74" />
        <Button Content="Recipe Hub"  VerticalAlignment="Top" Height="125" Width="125" Margin="39,91,636,0"  Click="Recipe_Click" Grid.Row="1">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"></Setter>
                </Style>
            </Button.Resources>
        </Button>
        <Button Content="Featured Recipe Of The Day" Height="125" Width="125" Margin="270,126,404,30" Grid.Row="1">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button  Content="Login;" Margin="652,12,23,16" Height="125" Width="125">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button Content="Ingredients List" Height="125" Width="125" Margin="478,126,197,30" Click="Ingredients_Click" Grid.Row="1">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>

        <Button Content="Shopping List" Height="125" Width="125" Margin="642,126,33,30"  Click="ShoppingList_Click" Grid.Row="1">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>

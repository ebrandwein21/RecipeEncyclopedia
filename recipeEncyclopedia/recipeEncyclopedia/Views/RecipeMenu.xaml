<Window x:Class="recipeEncyclopedia.Views.RecipeMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:recipeEncyclopedia.Views"
        mc:Ignorable="d"
        Title="RecipeMenu" Height="450" Width="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border 
            Background="Beige" BorderBrush="DarkOliveGreen" BorderThickness="10" Grid.RowSpan="4" Grid.ColumnSpan="13" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        </Border>

        <Label
            Content="Welcome To The Recipe Hub" Background="Beige" BorderBrush="Transparent" FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="7"  Grid.Column="1" Grid.Row="1">
        </Label>
        <Button
          Content=" Ethnic &#xD;&#xA;Recipes"  Grid.Row="2" Grid.Column="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="InternationalRecipe_Click">
        </Button>

        <Button
          Content="&#xD;&#xA;Breakfast &#xD;&#xA;Recipes"  Grid.Row="2" Grid.Column="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="BreakfastRecipe_Click">
        </Button>

        <Button
          Content="X" Grid.Column="12" Background="red" HorizontalAlignment="Center" VerticalAlignment="Top" Click="ExitButton_Click" Width="47" Margin="0,10,0,0" />

        <Button
          Content="Baking &#xD;&#xA;Recipes"  Grid.Row="2" Grid.Column="7"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="BakingRecipe_Click">
        </Button>

        <Button
          Content="Lunch &#xD;&#xA;Recipes"  Grid.Row="2" Grid.Column="9"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="LunchRecipes_Click">
        </Button>

        <Button
          Content="Dinner&#xD;&#xA; Recipes"  Grid.Row="2" Grid.Column="11"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="DinnerRecipes_Click">
        </Button>

        <Button
          Content="Vegan &#xD;&#xA; Recipes"  Grid.Row="2" Grid.Column="1"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="Vegan_Click">
        </Button>

        <Button
          Content="Home"  Grid.Row="0" Grid.Column="1"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="Home_Click">
        </Button>


    </Grid>
</Window>
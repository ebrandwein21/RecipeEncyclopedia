<Window x:Class="recipeEncyclopedia.Views.VeganView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:recipeEncyclopedia.Views"
        mc:Ignorable="d"
        Title="VeganRecipes" Height="600" Width="900"
        Background="Beige">
    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Title -->
        <Label Content="Welcome To The Gluten Free Recipe Hub"
               FontSize="30" FontWeight="Bold"
               HorizontalAlignment="Center" Grid.ColumnSpan="2"
               Margin="0,10,0,20" />

        <!-- Home and Exit Buttons -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Right" Margin="0,0,0,10">
            <Button Content="Home 🏠︎" Click="Home_Click" Grid.Column="3" Grid.ColumnSpan="2">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>

        <!-- ListBox for Vegan Recipes -->
        <ListBox x:Name="VeganRecipeList"
                 Grid.Row="2" Grid.Column="0"
                 DisplayMemberPath="Name"
                 SelectionChanged="VeganRecipeList_SelectionChanged"
                 Margin="10"
                 FontSize="16"
                 VerticalAlignment="Stretch"
                 HorizontalAlignment="Stretch" />

        <!-- Recipe Details -->
        <StackPanel Grid.Row="2" Grid.Column="1" Margin="20,10,10,10">
            <TextBlock Text="Recipe Details" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <Border BorderBrush="DarkOliveGreen" BorderThickness="1" Padding="10" Background="Transparent">
                <TextBlock x:Name="VeganDetailsText"
               TextWrapping="Wrap"
               FontSize="16"
               Foreground="Black" />
            </Border>
            <Button Content="Add to Favorites"
                Width="150"
                Height="40"
                Margin="0,20,0,0"
                HorizontalAlignment="Left"
                Click="AddToFavorites_Click" />


        </StackPanel>
    </Grid>
</Window>

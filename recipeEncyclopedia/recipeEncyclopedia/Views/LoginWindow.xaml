<Window x:Class="recipeEncyclopedia.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login/Register" Height="300" Width="300">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Username"/>
            <TextBox x:Name="UsernameBox" Margin="0,5"/>

            <TextBlock Text="Password"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,5"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                <Button Content="Login" Width="100" Margin="5" Click="Login_Click"/>
                <Button Content="Register" Width="100" Margin="5" Click="Register_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>


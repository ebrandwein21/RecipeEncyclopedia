<Window x:Class="recipeEncyclopedia.Views.ShoppingList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:recipeEncyclopedia.Views"
        mc:Ignorable="d"
        Title="ShoppingList" Height="450" Width="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="144.68"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border 
            Background="Beige" BorderBrush="DarkOliveGreen" BorderThickness="10" Grid.RowSpan="4" Grid.ColumnSpan="13" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        </Border>

        <Label
            Content="Welcome To The Shopping List Hub" Background="Beige" BorderBrush="Transparent" FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="10"  Grid.Column="1" Grid.Row="1">
        </Label>

        <ListBox x:Name="ShoppingListBox"
             Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="11" Grid.RowSpan="1"
             Margin="10"
             FontSize="14"
             HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        </ListBox>

        <Button Content="Remove Selected Item"
            Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="3"
            Click="RemoveSelectedItem_Click"
            Margin="10"
            Height="30"
            HorizontalAlignment="Center">
            <Button.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="5"/>
            </Style>
        </Button.Resources>
        </Button>

        <Button Content="Clear Shopping List"
            Grid.Row="3" Grid.Column="6" Grid.ColumnSpan="3"
            Click="ClearShoppingList_Click"
            Margin="10"
            Height="30"
            HorizontalAlignment="Center">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>




        <Button
          Content="Home"  Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" Click="Home_Click" Height="30" Grid.RowSpan="1" >
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>


    </Grid>
</Window>
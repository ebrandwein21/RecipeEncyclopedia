<Window x:Class="recipeEncyclopedia.Views.BreakfastRecipes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:recipeEncyclopedia.Views"
        mc:Ignorable="d"
        Title="BreakfastRecipes" Height="600" Width="900"
        Background="Beige">

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Title -->
        <Label Content="Welcome To The Breakfast Recipe Hub"
               FontSize="30" FontWeight="Bold"
               HorizontalAlignment="Center" Grid.ColumnSpan="4"
               Margin="0,10,0,20" />


        <Grid Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Content="Home" Click="Home_Click" Grid.Column="3" Grid.ColumnSpan="2">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button Content="Login" Click="LoginButton_Click" Foreground="Black" Grid.Column="6" Grid.ColumnSpan="2">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>

        <ListBox x:Name="BreakfastRecipeList"
                 Grid.Row="1" Grid.Column="0" Grid.RowSpan="4" Grid.ColumnSpan="2"
                 DisplayMemberPath="Name"
                 SelectionChanged="BreakfastRecipeList_SelectionChanged"
                 FontSize="16"
                 VerticalAlignment="Stretch"
                 HorizontalAlignment="Stretch" />

        <Grid Grid.Row="4" Grid.Column="3" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Recipe Details" FontSize="25" FontWeight="Bold" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2"/>
            <Border BorderBrush="DarkOliveGreen" BorderThickness="1" Padding="10" Background="Transparent" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3">
                <TextBlock x:Name="BreakfastDetailsText"
               TextWrapping="Wrap"
               FontSize="16"
               Foreground="Black" />
            </Border>
            <Button Content="Add to Favorites"
                Grid.Column="2"
                Grid.Row="0"
                Click="AddToFavorites_Click" >
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Grid>
</Window>
<Window x:Class="recipeEncyclopedia.Views.DinnerRecipes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:recipeEncyclopedia.Views"
        mc:Ignorable="d"
        Title="DinnerRecipes" Height="600" Width="900"
        Background="Beige">
    <Viewbox Stretch="Uniform">

        <Grid Width="900" Height="600" Background="Beige">

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Title -->
            <Label Content="Welcome To The Dinner Recipe Hub"
               FontSize="30" FontWeight="Bold"
               HorizontalAlignment="Center" Grid.ColumnSpan="3"
               Margin="0,10,0,20" />


            <Grid Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button Content="Home 🏠︎" Click="Home_Click" Grid.Column="3" Grid.ColumnSpan="2">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button Content="All Recipes" Click="AllRecipes_Click" Grid.Column="6" Grid.ColumnSpan="2" >
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button Content="Favorite Recipes" Click="FavoriteRecipe_Click" Grid.ColumnSpan="2" FontSize="11.5">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>

            <!-- ListBox for Dinner Recipes -->
            <ListBox x:Name="DinnerRecipeList"
                 Grid.Row="1" Grid.Column="0" Grid.RowSpan="4" Grid.ColumnSpan="2"
                 DisplayMemberPath="Name"
                 SelectionChanged="DinnerRecipeList_SelectionChanged"
                 FontSize="16"
                 VerticalAlignment="Stretch"
                 HorizontalAlignment="Stretch" />

            <Grid Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="2" Grid.RowSpan="3" Margin="0,81,0,45">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Viewbox Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Grid.ColumnSpan="2">
                    <TextBlock Text="Recipe Details" FontSize="25" FontWeight="Bold"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                </Viewbox>

                <Border BorderBrush="DarkOliveGreen" BorderThickness="1" Background="Transparent" Grid.Column="0" Grid.Row="3" Grid.RowSpan="3" Grid.ColumnSpan="4">
                    <ScrollViewer Grid.Row="6">
                        <TextBlock x:Name="DinnerRecipeDetailsText"
       TextWrapping="Wrap"
       FontSize="16"
       Foreground="Black"
       Grid.Row="5"/>
                    </ScrollViewer>
                </Border>
                <Button Content="Add to Favorites"
        Grid.Column="3"
        Grid.Row="0"
            Grid.RowSpan="2"
          
        Click="AddToFavorites_Click" >
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Grid>
    </Viewbox>
</Window>
